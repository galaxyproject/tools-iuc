            </conditional>
            <output name="gene_data_report">
                <assert_contents>
                    <has_text text="human"/>
                    <has_text text="BRCA1"/>
                    <has_n_lines n="2"/>
                    <has_n_columns n="8"/>
                </assert_contents>
            </output>
            <output name="rna_fasta">
                <assert_contents>
                    <has_text text=">"/>
