                <element name="corr" ftype="txt">
                    <assert_contents>
                        <has_n_lines n="2"/>
                        <has_line_matching expression="mean\tmedian\tlow\thigh\tpval\terror"/>
                        <has_text_matching expression="0\.9[0-9]+\s+0\.9[0-9]+\s+0\.8[0-9]+\s+0\.9[0-9]+\s+0\.007[0-9]+\s+0\.007[0-9]+\s+"/>
