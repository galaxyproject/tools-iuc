<tool id="glimmer_glimmer_to_gff" name="Convert Glimmer to GFF" version="@WRAPPER_VERSION@">
    <description></description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <command><![CDATA[
        python '$__tool_directory__/glimmer_glimmer_to_gff.py'
            '$input' > '$output'
    ]]></command>
    <inputs>
        <param name="input" type="data" format="tabular" label="Glimmer Output File"/>
    </inputs>
    <outputs>
        <data name="output" format="gff"/>
    </outputs>
    <tests>
        <test>
            <param name="input" value="glimmer_w_icm_trans-table-11_genomic.out" />
            <output name="output" file='glimmer.gff'/>
        </test>
    </tests>
