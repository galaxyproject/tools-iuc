<tool id="EMBOSS: wordcount109" name="wordcount"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <description>Counts words of a specified size in a DNA sequence</description>
  <macros>
    <token name="@COMMAND@">wordcount</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <expand macro="version_command" />
  <command><![CDATA[
    @COMMAND@
      -sequence '$input1'
      -outfile '$out_file1'
      #if str($wordsize) != ""
        -wordsize $wordsize
      #end if
      -mincount $mincount
      -auto
  ]]></command>
  <inputs>
    <param name="input1" type="data" format="fasta" label="Sequence" />
    <param name="wordsize" type="integer" value="" min="1" optional="true" label="Word size" help="default: 2 for protein, 4 for nucleotide sequences" />
    <param name="mincount" type="integer" value="1" min="1" label="Minimum word count to report" />
  </inputs>
  <outputs>
    <data name="out_file1" format="wordcount" />
  </outputs>
  <tests>
    <test>
      <param name="input1" value="2.fasta"/>
      <param name="wordsize" value="4"/>
      <output name="out_file1" file="emboss_wordcount_out.wordcount" sort="true"/>
    </test>
  </tests>
  <help>
.. class:: warningmark

The input dataset needs to be sequences.

-----

@DOC_LINK@
  </help>
  <expand macro="citations" />
</tool>
