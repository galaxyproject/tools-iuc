<tool id="EMBOSS: chips10" name="chips"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <description>Codon usage statistics</description>
  <macros>
    <token name="@COMMAND@">chips</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <expand macro="version_command" />
  <command><![CDATA[
  @COMMAND@
    -seqall '$input1'
    -outfile '$out_file1'
    $sum
    -auto
  ]]></command>
  <inputs>
    <param name="input1" type="data" format="data" label="On query" />
    <param name="sum" type="boolean" truevalue="-sum" falsevalue="-nosum" checked="false" label="Sum codons over all sequences"/>
  </inputs>
  <outputs>
    <data name="out_file1" format="chips" />
  </outputs>
  <tests>
    <test>
      <param name="input1" value="X13776.fas"/>
      <param name="sum" value="true"/>
      <output name="out_file1" file="emboss_chips_out.chips"/>
    </test>
    <test>
      <param name="input1" value="emboss_seqmatchall.fas"/>
      <param name="sum" value="false"/>
      <output name="out_file1">
        <assert_contents>
          <has_n_lines n="2"/>
        </assert_contents>
      </output>
    </test>
  </tests>
  <help>
@DOC_LINK@
  </help>
  <expand macro="citations" />
</tool>
