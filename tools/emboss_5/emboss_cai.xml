<tool id="EMBOSS: cai6" name="cai"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <description>CAI codon adaptation index</description>
  <macros>
    <token name="@COMMAND@">cai</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <expand macro="version_command" />
  <command><![CDATA[
  @COMMAND@
    -seqall '$input1'
    -outfile '$out_file1'
    -cfile $cfile
    -auto
  ]]></command>
  <inputs>
    <param name="input1" type="data" format="fasta" label="On query" />
    <conditional name="custom_cond">
      <param name="custom_select" type="select" label="Use custom codon usage file">
        <option value="no">No</option>
        <option value="yes">Yes</option>
      </param>
      <when value="yes">
        <param name="input2" type="data" format="txt" label="Codon usage file" />
      </when>
      <when value="no">
        <param name="cfile" type="select" label="Codon usage file">
          <expand macro="codon_usage_options"/>
        </param>
      </when>
    </conditional>
  </inputs>
  <outputs>
    <data name="out_file1" format="cai" />
  </outputs>
  <tests>
    <test>
      <param name="input1" value="2.fasta"/>
      <conditional name="custom_cond">
        <param name="custom_select" value="no"/>
        <param name="cfile" value="Eyeast_cai.cut"/>
      </conditional>
      <output name="out_file1" file="emboss_cai_out.cai"/>
    </test>
  </tests>
  <help>
.. class:: warningmark

The input dataset needs to be sequences.

-----

@DOC_LINK@
  </help>
  <expand macro="citations" />
</tool>
