<tool id="EMBOSS: octanol63" name="octanol"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <!-- graphics output with filename, no functional tests added -->
  <description>Displays protein hydropathy</description>
  <macros>
    <token name="@COMMAND@">octanol</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <expand macro="version_command" />
  <command><![CDATA[
  @COMMAND@
    -sequence '$input1'
    -graph png
    -goutfile 'out_file1'
    -width $width
    $octanolplot
    $interfaceplot
    $differenceplot
    -auto
  ]]></command>
  <inputs>
    <param name="input1" type="data" format="data" label="Sequences" />
    <param name="width" type="integer" value="19" label="Window size" />
    <param name="octanolplot" type="boolean" truevalue="-plotoctanol" falsevalue="" checked="false" label="Display the octanol plot"/>
    <param name="interfaceplot" type="boolean" truevalue="-plotinterface" falsevalue="" checked="false" label="Display the interface plot"/>
    <param name="differenceplot" type="boolean" truevalue="-plotdifference" falsevalue="-noplotdifference" checked="false" label="Display the difference plot"/>
  </inputs>
  <outputs>
    <data name="out_file1" format="png" from_work_dir="out_file1.1.png"/>
  </outputs>
  <tests>
    <test>
      <param name="input1" value="P08100.faa"/>
      <output name="out_file1">
        <assert_contents>
          <has_size min="1"/>
        </assert_contents>
      </output>
    </test>
  </tests>
  <help>

@DOC_LINK@

  </help>
  <expand macro="citations" />
</tool>
