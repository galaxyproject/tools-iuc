<tool id="EMBOSS: polydot77" name="polydot"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <!-- produces png file, not added functional tests -->
  <description>Displays all-against-all dotplots of a set of sequences</description>
  <macros>
    <token name="@COMMAND@">polydot</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <expand macro="version_command" />
  <command><![CDATA[
  @COMMAND@
    -sequence '$input1'
    -graph png
    -goutfile 'output2'
    -outfeat '$output1'
    -wordsize $wordsize
    -boxit $boxit
    -dumpfeat yes
    -gap $gap
    -auto
  ]]></command>
  <inputs>
    <param name="input1" type="data" format="fasta" label="Sequence" />
    <param name="wordsize" type="integer" value="6" label="Word size" />
    <param name="boxit" type="boolean" truevalue="-boxit" falsevalue="-noboxit" checked="true" label="Draw a box around each dotplot"/>
    <param name="gap" type="integer" value="10" min="0" label="Size of gap" />
  </inputs>
  <outputs>
    <data name="output1" format="polydot" />
    <data name="output2" format="png" from_work_dir="output2.1.png" label="${tool.name} on ${on_string}: png"/>
  </outputs>
  <tests>
    <test>
      <param name="input1" value="globins.fas"/>
      <param name="wordsize" value="6"/>
      <param name="boxit" value="yes"/>
      <param name="gap" value="10"/>
      <output name="output1" value="emboss_polydot_out.txt" lines_diff="14"/>
      <output name="output2">
        <assert_contents>
          <has_size min="1"/>
        </assert_contents>
      </output>
    </test>
  </tests>
  <help>
.. class:: warningmark

The input dataset needs to be sequences.

-----


@DOC_LINK@

  </help>
  <expand macro="citations" />
</tool>
