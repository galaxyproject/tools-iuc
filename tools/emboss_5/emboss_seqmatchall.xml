<tool id="EMBOSS: seqmatchall83" name="seqmatchall"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <description>All-against-all comparison of a set of sequences</description>
  <macros>
    <token name="@COMMAND@">seqmatchall</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <expand macro="version_command" />
  <command><![CDATA[
    @COMMAND@
      -sequence '$input1'
      -outfile '$out_file1'
      -wordsize $wordsize
      -aformat2 $out_format1
      -auto
  ]]></command>
  <inputs>
    <param name="input1" type="data" format="fasta" label="Sequences" />
    <param name="wordsize" type="integer" value="4" label="Word size" />
    <param name="out_format1" type="select" label="Output alignment file format">
      <expand macro="alignment_formats"/>
      <option value="match" selected="true">Match</option>
    </param>
  </inputs>
  <outputs>
    <data name="out_file1" format="seqmatchall">
      <expand macro="alignment_change_formats">
        <when input="out_format1" value="seqmatchall" format="seqmatchall" />
      </expand>
    </data>
  </outputs>
  <tests>
    <test>
      <param name="input1" value="emboss_seqmatchall.fas"/>
      <param name="wordsize" value="15"/>
      <param name="out_format1" value="fasta"/>
      <output name="out_file1" file="emboss_seqmatchall_out.fasta" ftype="fasta"/>
    </test>
    <test>
      <param name="input1" value="emboss_seqmatchall.fas"/>
      <param name="wordsize" value="15"/>
      <output name="out_file1" file="emboss_seqmatchall_out.seqmatchall" ftype="match" lines_diff="8"/>
    </test>
  </tests>
  <help>
.. class:: warningmark

The input dataset needs to be sequences.

-----

@DOC_LINK@
  </help>
  <expand macro="citations" />
</tool>
