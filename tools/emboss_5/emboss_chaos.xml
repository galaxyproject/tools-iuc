<tool id="EMBOSS: chaos7" name="chaos"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <description>Create a chaos game representation plot for a sequence</description>
  <macros>
    <token name="@COMMAND@">chaos</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <expand macro="version_command" />
  <command><![CDATA[
    @COMMAND@
      -sequence '$input1'
      -graph png
      -goutfile out_file
      -gtitle '$input1.element_identifier'
      -auto
  ]]></command>
  <inputs>
    <param name="input1" type="data" format="@SEQUENCE_FORMATS@" label="On query" />
  </inputs>
  <outputs>
    <data name="out_file1" format="png" from_work_dir="out_file.1.png"/>
  </outputs>
   <tests>
    <test>
      <param name="input1" value="2.fasta" ftype="fasta"/>
      <output name="out_file1" ftype="png">
        <assert_contents>
          <has_size min="1"/>
        </assert_contents>
      </output>
    </test>
  </tests>
  <help>
@DOC_LINK@
  </help>
  <expand macro="citations" />
</tool>
