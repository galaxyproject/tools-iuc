<tool id="EMBOSS: helixturnhelix43" name="helixturnhelix"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <description>Report nucleic acid binding motifs</description>
  <macros>
    <token name="@COMMAND@">helixturnhelix</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <expand macro="version_command" />
  <command><![CDATA[
    @COMMAND@
      -sequence '$input1'
      -outfile '$out_file1'
      -mean $mean
      -sdvalue $sdvalue
      -minsd $minsd
      $eightyseven
      -rformat2 $out_format1
      -auto
  ]]></command>
  <inputs>
    <param name="input1" type="data" format="data" label="Sequences" />
    <param name="mean" type="float" value="238.71" min="1" max="10000" label="Mean value" />
    <param name="sdvalue" type="float" value="293.61" min="1" max="10000"  label="Standard deviation value" />
    <param name="minsd" type="float" value="2.5" min="0" max="100" label="Minimum SD" />
    <param name="eightyseven" type="boolean" truevalue="-eightyseven" falsevalue="" label="Use the old (1987) weight data"/>
    <param name="out_format1" type="select" label="Output report file format">
      <option value="motif">Motif</option>
      <option value="gff">GFF</option>
      <option value="pir">PIR</option>
      <option value="swiss">SwissProt</option>
      <option value="dbmotif">DbMotif</option>
      <option value="excel">Excel/TSV (tab delimited)</option>
      <option value="feattable">FeatTable</option>
      <option value="regions">Regions</option>
      <option value="seqtable">SeqTable</option>
      <option value="simple">SRS Simple</option>
      <!-- <option value="srs">SRS</option> -->
      <option value="table">Table</option>
      <option value="tagseq">TagSeq</option>
    </param>
  </inputs>
  <outputs>
    <data name="out_file1" format="motif">
      <change_format>
        <when input="out_format1" value="gff" format="gff3" />
        <when input="out_format1" value="pir" format="pir" />
        <when input="out_format1" value="swiss" format="swiss" />
        <when input="out_format1" value="dbmotif" format="dbmotif" />
        <when input="out_format1" value="excel" format="tabular" />
        <when input="out_format1" value="feattable" format="feattable" />
        <when input="out_format1" value="regions" format="regions" />
        <when input="out_format1" value="seqtable" format="seqtable" />
        <when input="out_format1" value="simple" format="txt" />
        <when input="out_format1" value="tagseq" format="tabular" />
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <param name="input1" value="helixturnhelix.faa"/>
      <param name="mean" value="238.71"/>
      <param name="sdvalue" value="293.61"/>
      <param name="minsd" value="2.5"/>
      <param name="eightyseven" value="false"/>
      <output name="out_file1" file="emboss_helixturnhelix_out.motif" ftype="motif" lines_diff="8"/>
    </test>
    <test>
      <param name="input1" value="helixturnhelix.faa"/>
      <param name="mean" value="238.71"/>
      <param name="sdvalue" value="293.61"/>
      <param name="minsd" value="2.5"/>
      <param name="eightyseven" value="false"/>
      <param name="out_format1" value="excel"/>
      <output name="out_file1" file="emboss_helixturnhelix_out.tabular" ftype="tabular"/>
    </test>
  </tests>
  <help>
@DOC_LINK@
  </help>
  <expand macro="citations" />
</tool>
