<tool id="EMBOSS: pepwindow73" name="pepwindow"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <!-- produces png file -->
  <description>Displays protein hydropathy</description>
  <macros>
    <token name="@COMMAND@">pepwindow</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <expand macro="version_command" />
  <command><![CDATA[
  @COMMAND@
    -sequence '$input1'
    -graph png
    -goutfile 'out_file1'
    -window $length
    $normalize
    -auto
  ]]></command>
  <inputs>
    <param name="input1" type="data" format="data" label="Sequence" />
    <param name="length" type="integer" value="7" label="Window size" />
    <param name="normalize" type="boolean" truevalue="-normalize" falsevalue="" checked="false" label="Normalize data values"/>
  </inputs>
  <outputs>
    <data name="out_file1" format="png" from_work_dir="out_file1.1.png" />
  </outputs>
  <tests>
    <test>
      <param name="input1" value="P08100.faa"/>
      <output name="out_file1">
        <assert_contents>
          <has_size min="1"/>
        </assert_contents>
      </output>
    </test>
  </tests>
  <help>

@DOC_LINK@

  </help>
  <expand macro="citations" />
</tool>
