<tool id="EMBOSS: cirdna11" name="cirdna"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <description>Draws circular maps of DNA constructs</description>
  <macros>
    <token name="@COMMAND@">cirdna</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <expand macro="version_command" />
  <command><![CDATA[
    @COMMAND@
      -infile '$input1'
      -graphout png
      -goutfile out_file
      -gtitle '$input1.element_identifier'
      -auto
  ]]></command>
  <inputs>
    <param name="input1" type="data" format="txt" label="On query" />
  </inputs>
  <outputs>
    <data name="out_file1" format="png" from_work_dir="out_file.1.png"/>
  </outputs>
  <tests>
    <test>
      <param name="input1" value="data.cirp" ftype="txt"/>
      <output name="out_file1" ftype="png">
        <assert_contents>
          <has_size min="1"/>
        </assert_contents>
      </output>
    </test>
  </tests>
  <help>
@DOC_LINK@
  </help>
  <expand macro="citations" />
</tool>
