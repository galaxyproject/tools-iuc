<tool id="EMBOSS: pepinfo69" name="pepinfo"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <!-- puts file info in output files -->
  <description>Plots simple amino acid properties in parallel</description>
  <macros>
    <token name="@COMMAND@">pepinfo</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <expand macro="version_command" />
  <command><![CDATA[
    @COMMAND@
    -sequence '$input1'
    -outfile '$out_file1'
    -goutfile 'out_file2'
    -graph png
    -hwindow $hwindow
    -generalplot
    -hydropathyplot
    -auto
  ]]></command>
  <inputs>
    <param name="input1" type="data" format="data" label="Sequence" />
    <param name="hwindow" type="integer" value="9" label="Window size for hydropathy averaging" />
    <param name="plot_type" type="select" min="1" multiple="true" label="Choose a plot type">
      <option value="general">Histogram of general properties</option>
      <option value="hydropathy">Graphs of hydropathy</option>
    </param>
  </inputs>
  <outputs>
    <data name="out_file1" format="pepinfo" />
    <data name="generalplot" format="png" from_work_dir="out_file2.1.png" label="${tool.name} on ${on_string}: general properties plot">
      <filter>"general" in plot_type</filter>
    </data>
    <data name="hydropathyplot" format="png" from_work_dir="out_file2.2.png" label="${tool.name} on ${on_string}: Graphs of hydropathy">
      <filter>"hydropathy" in plot_type</filter>
    </data>
  </outputs>
  <tests>
    <test expect_num_outputs="3">
      <param name="input1" value="P08100.faa"/>
      <output name="out_file1" value="emboss_pepinfo.txt"/>
      <output name="generalplot">
        <assert_contents>
          <has_size min="1"/>
        </assert_contents>
      </output>
      <output name="hydropathyplot">
        <assert_contents>
          <has_size min="1"/>
        </assert_contents>
      </output>
    </test>
    <test expect_num_outputs="2">
      <param name="input1" value="P08100.faa"/>
      <param name="plot_type" value="general"/>
      <output name="out_file1" value="emboss_pepinfo.txt"/>
      <output name="generalplot">
        <assert_contents>
          <has_size min="1"/>
        </assert_contents>
      </output>
    </test>
    <test expect_num_outputs="2">
      <param name="input1" value="P08100.faa"/>
      <param name="plot_type" value="hydropathy"/>
      <output name="out_file1" value="emboss_pepinfo.txt"/>
      <output name="hydropathyplot">
        <assert_contents>
          <has_size min="1"/>
        </assert_contents>
      </output>
    </test>
  </tests>
  <help>

@DOC_LINK@

  </help>
  <expand macro="citations" />
</tool>
