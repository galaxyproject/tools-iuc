<tool id="EMBOSS: dotpath25" name="dotpath"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <description>Non-overlapping wordmatch dotplot of two sequences</description>
  <macros>
    <token name="@COMMAND@">dotpath</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <expand macro="version_command" />
  <command><![CDATA[
  @COMMAND@
    -asequence '$input1'
    -bsequence '$input2'
    -gtitle 'dotpath'
    -goutfile 'out_file'
    -wordsize $wordsize
    $overlaps
    $boxit
    -graph png
    -auto
  ]]></command>
  <inputs>
    <param name="input1" type="data" format="@SEQUENCE_FORMATS@" label="Sequence 1" />
    <param name="input2" type="data" format="@SEQUENCE_FORMATS@" label="Sequence 2" />
    <param name="wordsize" type="integer" min="2" value="4" label="Word size" />
    <param name="overlaps" type="boolean" truevalue="-overlaps" falsevalue="" checked="false" label="Display the overlapping matches" help="(in red) as well as the minimal set of non-overlapping matches"/>
    <param name="boxit" type="boolean" truevalue="-boxit" falsevalue="-noboxit" checked="true" label="Draw a box around dotplot"/>
  </inputs>
  <outputs>
    <data name="out_file1" format="png" from_work_dir="out_file.1.png"/>
  </outputs>
  <tests>
    <test>
      <param name="input1" value="H45989.fas"/>
      <param name="input2" value="U68037.fas"/>
      <output name="out_file1">
        <assert_contents>
          <has_size min="1"/>
        </assert_contents>
      </output>
    </test>
  </tests>
  <help>
@DOC_LINK@
  </help>
  <expand macro="citations" />
</tool>
