<tool id="EMBOSS: dottup26" name="dottup"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <description>Displays a wordmatch dotplot of two sequences</description>
  <macros>
    <token name="@COMMAND@">dottup</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <expand macro="version_command" />
  <command><![CDATA[
  @COMMAND@
    -asequence '$input1'
    -bsequence '$input2'
    -gtitle 'dotpath'
    -goutfile 'out_file1'
    -wordsize $wordsize
    $boxit
    $stretch
    -graph png
    -xygraph png
    -auto
  ]]></command>
  <inputs>
    <param name="input1" type="data" format="@SEQUENCE_FORMATS@" label="Sequence 1" />
    <param name="input2" type="data" format="@SEQUENCE_FORMATS@" label="Sequence 2" />
    <param name="wordsize" type="integer" value="4" min="2" label="Word size" />
    <param name="boxit" type="boolean" truevalue="-boxit" falsevalue="-noboxit" checked="true" label="Draw a box around dotplot"/>
    <param name="stretch" type="boolean" truevalue="-stretch" falsevalue="" label="Use non-proportional axes"/>
  </inputs>
  <outputs>
    <data name="out_file1" format="png" from_work_dir="out_file1.1.png"/>
  </outputs>
  <tests>
    <test>
      <param name="input1" value="H45989.fas"/>
      <param name="input2" value="U68037.fas"/>
      <output name="out_file1">
        <assert_contents>
          <has_size min="1"/>
        </assert_contents>
      </output>
    </test>
  </tests>
  <help>
@DOC_LINK@
  </help>
  <expand macro="citations" />
</tool>
