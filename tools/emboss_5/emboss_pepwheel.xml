<tool id="EMBOSS: pepwheel72" name="pepwheel"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <!-- produces png file -->
  <description>Shows protein sequences as helices</description>
  <macros>
    <token name="@COMMAND@">pepwheel</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <expand macro="version_command" />
  <command><![CDATA[
  @COMMAND@
    -sequence '$input1'
    -graph png
    -goutfile 'out_file1'
    -gtitle 'Helical wheel of: $input1.element_identifier'
    -squares '$squares'
    -diamonds '$diamonds'
    -octags '$octags'
    $amphipathic
    -steps $steps
    -turns $turns
    $wheel
    -auto
  ]]></command>
  <inputs>
    <param name="input1" type="data" format="data" label="Sequence" />
    <param name="steps" type="integer" value="18" min="2" max="100" label="Steps, the number of residues plotted per turn is this value divided by the 'turns' value" />
    <param name="turns" type="integer" value="5" min="1" max="100" label="Turns, the number of residues plotted per turn is the 'steps' value divided by this value" />
    <param name="squares" type="text" value="ILVM" label="Residues to mark with squares" />
    <param name="diamonds" type="text" value="DENQST" label="Residues to mark with diamonds" />
    <param name="octags" type="text" value="HKR" label="Residues to mark with octagons" />
    <param name="wheel" type="boolean" truevalue="-wheel" falsevalue="-nowheel" checked="true" label="Plot the wheel"/>
    <param name="amphipathic" type="boolean" truevalue="-amphipathic" falsevalue="" checked="true" label="Amphipathic?" help="If this is true then the residues ACFGILMVWY are marked as squares and all other residues are unmarked. This overrides any other markup that you may have specified" />
  </inputs>
  <outputs>
    <data name="out_file1" format="png" from_work_dir="out_file1.1.png" />
  </outputs>
  <tests>
    <test>
      <param name="input1" value="P68871.faa"/>
      <output name="out_file1">
        <assert_contents>
          <has_size min="1"/>
        </assert_contents>
      </output>
    </test>
  </tests>
  <help>

@DOC_LINK@

  </help>
  <expand macro="citations" />
</tool>
