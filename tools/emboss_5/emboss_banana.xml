<tool id="EMBOSS: banana3" name="banana"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <description>Bending and curvature plot in B-DNA</description>
  <macros>
    <token name="@COMMAND@">banana</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <expand macro="version_command" />
  <command><![CDATA[
  @COMMAND@
    -sequence '$input1'
    -outfile '$out_file1'
    -goutfile goutfile
    -gtitle "Bending and curvature of $input1.element_identifier"
    -graph pdf ## pdf, because png produces multiple files
    -auto
  ]]></command>
  <inputs>
    <param name="input1" type="data" format="data" label="On query" />
  </inputs>
  <outputs>
    <data name="out_file1" format="txt" />
    <data name="goutfile" format="pdf" from_work_dir="goutfile.pdf" label="${tool.name} on ${on_string}: png"/>
  </outputs>
  <tests>
    <test>
      <param name="input1" value="2.fasta"/>
      <output name="out_file1" file="emboss_banana_out.txt"/>
      <output name="goutfile">
        <assert_contents>
          <has_size min="1"/>
        </assert_contents>
      </output>
    </test>
  </tests>
  <help>
@DOC_LINK@
  </help>
  <expand macro="citations" />
</tool>
