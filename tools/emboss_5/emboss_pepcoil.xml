<tool id="EMBOSS: pepcoil68" name="pepcoil"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <description>Predicts coiled coil regions</description>
  <macros>
    <token name="@COMMAND@">pepcoil</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <command><![CDATA[
    @COMMAND@
      -sequence '$input1'
      -outfile '$out_file1'
      -window $window
      $coil
      $frame
      $other
      -auto
  ]]></command>
  <inputs>
    <param name="input1" type="data" format="data" label="Sequence" />
    <param name="window" type="integer" value="28" min="8" max="28" label="Window size" />
    <param name="coil" type="boolean" truevalue="-coil" falsevalue="-nocoil" checked="true" label="Report coiled coil regions"/>
    <param name="frame" type="boolean" truevalue="-frame" falsevalue="" checked="true"  label="Show coil frameshifts"/>
    <param name="other" type="boolean" truevalue="-other" falsevalue="" checked="false" label="Report non coiled coil regions"/>
  </inputs>
  <outputs>
    <data name="out_file1" format="pepcoil" />
  </outputs>
  <tests>
    <test>
      <param name="input1" value="2.fasta"/>
      <param name="window" value="28"/>
      <param name="coil" value="yes"/>
      <param name="frame" value="yes"/>
      <param name="other" value="yes"/>
      <output name="out_file1" file="emboss_pepcoil_out.pepcoil" lines_diff="8"/>
    </test>
  </tests>
  <help>
@DOC_LINK@
  </help>
  <expand macro="citations" />
</tool>
