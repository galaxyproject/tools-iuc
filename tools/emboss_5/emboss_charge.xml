<tool id="EMBOSS: charge8" name="charge"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <description>Protein charge plot</description>
  <macros>
    <token name="@COMMAND@">charge</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <expand macro="version_command" />
  <command><![CDATA[
    @COMMAND@
      -seqall '$input1'
      -outfile '$out_file1'
      -window $window
      -auto
  ]]></command>
  <inputs>
    <param name="input1" type="data" format="fasta" label="On query" />
    <param name="window" type="integer" value="5" min="1" label="Window size" />
  </inputs>
  <outputs>
    <data name="out_file1" format="charge" />
  </outputs>
  <tests>
    <test>
      <param name="input1" value="2.fasta"/>
      <param name="window" value="5"/>
      <output name="out_file1" file="emboss_charge_out.charge"/>
    </test>
  </tests>
  <help>
.. class:: warningmark

The input dataset needs to be sequences.

-----

@DOC_LINK@
  </help>
  <expand macro="citations" />
</tool>
