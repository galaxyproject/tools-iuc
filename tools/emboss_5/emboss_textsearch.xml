<tool id="EMBOSS: textsearch98" name="textsearch"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <description>Search sequence documentation. Slow, use SRS and Entrez!</description>
  <macros>
    <token name="@COMMAND@">textsearch</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <command><![CDATA[
  @COMMAND@
    -sequence '$input1'
    -outfile '$out_file1'
    -pattern '$pattern'
    $casesensitive
    $heading
    $usa
    $accession
    $search_name
    $description
    $html_out1
    -auto
  ]]></command>
  <inputs>
    <param name="input1" type="data" format="@FEATURE_FORMATS@" label="Sequence" />
    <param name="pattern" type="text" value="" label="Pattern to search for" />
    <param name="casesensitive" type="boolean" truevalue="-casesensitive" falsevalue="" label="Do a case-sensitive search"/>
    <param name="heading" type="boolean" truevalue="-heading" falsevalue="" label="Display column headings"/>
    <param name="usa" type="boolean" truevalue="-usa" falsevalue="" label="Display the USA of the sequence"/>
    <param name="accession" type="boolean" truevalue="-accession" falsevalue="" label="Display accession column"/>
    <param name="search_name" type="boolean" truevalue="-name" falsevalue="" label="Display name column"/>
    <param name="description" type="boolean" truevalue="-description" falsevalue="" label="Display description column"/>
    <param name="html_out1" type="boolean" truevalue="-html" falsevalue="" label="Format output as an HTML table"/>
  </inputs>
  <outputs>
    <data name="out_file1" format="textsearch">
      <change_format>
        <when input="html_out1" value="true" format="html" />
      </change_format>
    </data>
  </outputs>
  <tests>
    <test>
      <param name="input1" value="X65923.embl"/>
      <param name="pattern" value="nucleolar"/>
      <output name="out_file1" value="X65923.textsearch"/>
    </test>
  </tests>
  <help>

    @DOC_LINK@

  </help>
  <expand macro="citations" />
</tool>
