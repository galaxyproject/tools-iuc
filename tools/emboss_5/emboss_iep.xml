<tool id="EMBOSS: iep45" name="iep"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <description>Calculates the isoelectric point of a protein</description>
  <macros>
    <token name="@COMMAND@">iep</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <expand macro="version_command" />
  <command><![CDATA[
    @COMMAND@
      -sequence '$input1'
      -outfile '$out_file1'
      -step $step
      -amino $amino
      -carboxyl $carboxyl
      -graph png
      $termini
      -lysinemodified $lysinemodified
      -disulphides $disulphides
      -auto
  ]]></command>
  <inputs>
    <param name="input1" type="data" format="data" label="Sequences" />
    <param name="step" type="float" value="0.5" label="Step value for pH" />
    <param name="amino" type="integer" value="1" min="0" label="Number of N-termini" />
    <param name="carboxyl" type="integer" value="1" min="0" label="Number of C-termini" />
    <param name="termini" type="boolean" truevalue="--termini" falsevalue="--notermini" checked="true" label="Include charge at N and C terminus"/>
    <param name="lysinemodified" type="integer" value="0" min="0" label="Number of modified lysines" />
    <param name="disulphides" type="integer" value="0" min="0" label="Number of disulphide bridges" />
  </inputs>
  <outputs>
    <data name="out_file1" format="txt" />
  </outputs>
  <tests>
    <test>
      <param name="input1" value="2.fasta"/>
      <param name="step" value="0.5"/>
      <param name="amino" value="1"/>
      <param name="termini" value="yes"/>
      <output name="out_file1" file="emboss_iep_out.iep"/>
    </test>
  </tests>
  <help>
@DOC_LINK@
  </help>
  <expand macro="citations" />
</tool>
