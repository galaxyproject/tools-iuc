<tool id="EMBOSS: btwisted5" name="btwisted"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <description>Calculates the twisting in a B-DNA sequence</description>
  <macros>
    <token name="@COMMAND@">btwisted</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <expand macro="version_command" />
  <command><![CDATA[
  @COMMAND@
    -sequence '$input1'
    -outfile '$out_file1'
    -auto
  ]]></command>
  <inputs>
    <param name="input1" type="data" format="data" label="On query" />
  </inputs>
  <outputs>
    <data name="out_file1" format="btwisted" />
  </outputs>
  <tests>
    <test>
      <param name="input1" value="2.fasta"/>
      <output name="out_file1" file="emboss_btwisted_out.btwisted"/>
    </test>
  </tests>
  <help>
@DOC_LINK@
  </help>
  <expand macro="citations" />
</tool>
