<tool id="EMBOSS: codcmp12" name="codcmp"  version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
  <description>Codon usage table comparison</description>
  <macros>
    <token name="@COMMAND@">codcmp</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="bio_tools" />
  <expand macro="requirements" />
  <expand macro="version_command" />
  <command><![CDATA[
    @COMMAND@
     -first $cfile1
     -second $cfile2
     -outfile '$out_file1'
     -auto
  ]]></command>
  <inputs>
    <param name="cfile1" type="select" label="Codon usage file 1">
      <expand macro="codon_usage_options"/>
    </param>
    <param name="cfile2" type="select" label="Codon usage file 2">
      <expand macro="codon_usage_options"/>
    </param>
  </inputs>
  <outputs>
    <data name="out_file1" format="codcmp" />
  </outputs>
  <tests>
    <test>
      <param name="cfile1" value="Ehuman.cut"/>
      <param name="cfile2" value="Eacica.cut"/>
      <output name="out_file1" file="emboss_codcmp_out.codcmp"/>
    </test>
  </tests>
  <help>
@DOC_LINK@
  </help>
  <expand macro="citations" />
</tool>
