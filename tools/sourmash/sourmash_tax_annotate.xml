<tool id="sourmash_tax_annotate" name="sourmash tax annotate" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
    <description>gather results with lineage inforamtion</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[
        sourmash tax annotate
        -g
        #for $g in $gather_csv:
            '$g'
        #end for
        -t '$taxonomy_csv'
    ]]></command>
    <inputs>
        <expand macro="tax_inputs"/>
    </inputs>
    <outputs>
        <data name="with_lineage" from_work_dir="*with-lineage*" format="csv" label="${tool.name} on ${on_string}: CSV with Lineage"/>
    </outputs>
    <tests>
        <test expect_num_outputs="1">
            <param name="gather_csv" value="test1.gather.csv"/>
            <param name="taxonomy_csv" value="test.taxonomy.csv"/>
            <output name="with_lineage" ftype="csv">
                <assert_contents>
                    <has_n_lines n="5"/>
                </assert_contents>
            </output>
            <assert_stderr>
                <has_text text="KAnnotated 4 of 4 total rows"/>
            </assert_stderr>
        </test>
    </tests>
    <help><![CDATA[
        **Sourmash Taxonomy**

        The sourmash tax subcommands support taxonomic analysis of genomes and taxonomic profiling of metagenomes.

        **annotate**
        
        Adds genome-level lineage info to `gather` results without summarization or classification.

        @taxa_file_help@
    ]]></help>
    <expand macro="citations"/>
</tool>
