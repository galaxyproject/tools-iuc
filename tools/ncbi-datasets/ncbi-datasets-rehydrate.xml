<tool id="ncbi-datasets-rehydrate" name="Rehydrate dehyhdrated archive" version="0.1.0" profile="21.05">
    <requirements>
        <requirement type="package" version="11.25.1">ncbi-datasets-cli</requirement>
        <requirement type="package" version="16.02">p7zip</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
unzip $dehydrated_archive -d dehdrated_bag &&
datasets rehydrate --directory dehdrated_bag
    ]]></command>
    <inputs>
        <param name="dehydrated_archive" type="data" format="dehydrated.zip" label="Select a dehydrated archive"/>
    </inputs>
    <outputs>
        <collection name="output" type="list" label="rehydrated collection">
            <discover_datasets pattern="__name__" directory="dehydrated_bag" />
        </collection>
    </outputs>
    <help><![CDATA[
        TODO: Fill in help.
    ]]></help>
</tool>
