        <!-- #4 defaut, ioe, clustering -->
        <test expect_exit_code="1" expect_failure="true">
            <param name="i" value="events.ioe"/>
            <param name="event_type" value="ioe"/>
            <repeat name="files">
                <param name="p" value="sample1.psi"/>
                <param name="e" value="sample1.tpm"/>
            </repeat>
            <repeat name="files">
