                </assert_contents>
            </output>
            <output name="out_dpsi">
                <assert_contents>
                    <has_n_lines n="1276"/>
                    <has_text_matching expression="ENSG00000000460.+"/>
                </assert_contents>
            </output>
            <output name="out_avg">
                <assert_contents>
                    <has_n_lines n="9"/>
                    <has_text_matching expression="ENSG00000011009.+"/>
