            #if $input_type.input_single.is_of_type("fastq.gz", "fastqsanger.gz"):
                ln -s '$input_type.input_single' @SINGLE_GZ@ &&
                #set $gz = True
            #else
                ln -s '$input_type.input_single' @SINGLE@ &&
            #end if
        #elif $input_type.type == 'paired':
            #if $input_type.input_read1.is_of_type("fastq.gz", "fastqsanger.gz"):
                ln -s '$input_type.input_read1' @READ1_GZ@ &&
                ln -s '$input_type.input_read2' @READ2_GZ@ &&
                #set $gz = True
            #else
                ln -s '$input_type.input_read1' @READ1@ &&
                ln -s '$input_type.input_read2' @READ2@ &&
            #end if
        #else  ## paired_collection
            #if $input_type.input_readpair.forward.is_of_type("fastq.gz", "fastqsanger.gz"):
                ln -s '$input_type.input_readpair.forward' @READ1_GZ@ &&
                ln -s '$input_type.input_readpair.reverse' @READ2_GZ@ &&
