                <param name="sort_by_sel" value="sample"/>
                <param name="sort_by" value="16SAMP-747"/>
            </conditional>
            <output name="plot" value="AalborgWWTPs-heatmap-sort_by_sample.pdf" ftype="pdf"/>
        </test>
        <!-- sort by a group of samples -->
        <test expect_num_outputs="1">
