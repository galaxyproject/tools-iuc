<tool id="phe2cojac" name="Cojac: generate" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@"
      profile="@PROFILE@">
    <description>
        new variant definition YAMLs for cojac
    </description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="biotools"/>
    <expand macro="requirements"/>
    <expand macro="version"/>
    <command detect_errors="exit_code"><![CDATA[
phe2cojac
    '$in_yaml'
    -s '$shrt'
    -y '$out_yaml'

    ]]></command>
    <inputs>
        <param name="in_yaml" type="data" format="yaml"
               label="phe-genomics variant YAML input file"/>
        <param argument="--shrt" type="text" optional="true" label="Shortname"
               help="Otherwise auto-build one based on phe-genomic's unique id."/>
    </inputs>
    <outputs>
        <data name="out_yaml" format="yaml"
              label="${tool.name} on ${on_string}: Variant file for Cojac (yaml)"
              from_work_dir="cojac_variant.yaml">
        </data>
    </outputs>
    <tests>
        <test expect_num_outputs="1">
            <param name="in_yaml" value="in_yaml.yaml"/>
            <param name="shrt" value="om2"/>
            <output name="out_yaml" ftype="yaml">
                <assert_contents>
                    <has_text text="om2"/>
                </assert_contents>
            </output>
        </test>
    </tests>
    <help><![CDATA[
@HELP_HEADER@

Information about **phe2cojac** method
======================================

The method generates new variant definition YAMLs for cojac using YMLs available at PHE Genomic's Standardised Variant Definitions (https://github.com/phe-genomics/variant_definitions)

    ]]></help>
    <expand macro="citations"/>
</tool>
