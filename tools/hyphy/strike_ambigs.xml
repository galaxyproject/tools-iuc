<?xml version="1.0"?>
<tool id="strike_ambigs" name="Replace ambiguous codons" version="@VERSION@">
    <description>in a multiple alignment</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[
        hyphy $__tool_directory__/scripts/strike-ambigs.bf
            --alignment '$alignment' --output '$output'
        ]]></command>
    <inputs>
        <param name="alignment" type="data" format="fasta" label="Input alignment" />
    </inputs>
    <outputs>
        <data name="output" format="fasta" />
    </outputs>
    <tests>
        <test>
            <param name="input_file" ftype="fasta" value="absrel-in1.fa"/>
            <param name="input_nhx" ftype="nhx" value="absrel-in1.nhx"/>
            <param name="multiple_hits" value="None" />
            <param name="log" value="false"/>
            <output name="absrel_output" file="absrel-out1.json" compare="sim_size"/>
        </test>
        <test>
            <param name="input_file" ftype="fasta" value="absrel-in1.fa"/>
            <param name="input_nhx" ftype="nhx" value="absrel-in1.nhx"/>
            <param name="multiple_hits" value="Double" />
            <param name="log" value="false"/>
            <output name="absrel_output" file="absrel-out1.json" compare="sim_size"/>
        </test>
    </tests>
    <help></help>
    <expand macro="citations">
        <citation type="doi">10.1093/molbev/msv022</citation>
    </expand>
</tool>
