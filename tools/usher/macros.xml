    <macro name="sanitize_string" >
        <sanitizer invalid_char="">
            <valid initial="string.letters,string.digits">
                <add value="_"/>
                <add value="-"/>
                <add value="."/>
                <add value=":"/>
            </valid>
        </sanitizer>
    </macro>
