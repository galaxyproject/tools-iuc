<macros>
    <import>macros_option_text.xml</import>
    <macro name="aesthetics_macro" >
        <repeat name="aesthetics" title="Aesthetics"  >
            <conditional name="aes" >
                <param name="use" type="select" label="Aesthetic Type" >
                    <option value="color_and_fill" >Colour and Fill</option>
                    <option value="line_and_polygon" >Line and Polygon</option>
                    <option value="point" >Point</option>
                    <option value="text" >Text</option>
                </param>
                <expand macro="when_color_and_fill_macro" />
                <expand macro="when_line_and_polygon_macro" />
                <expand macro="when_point_macro" />
                <expand macro="when_text_macro" />
            </conditional>
        </repeat>
    </macro>
    <macro name="when_color_and_fill_macro" >
        <when value="color_and_fill" >
            <expand macro="select_colors" />
        </when>
    </macro>
    <macro name="when_line_and_polygon_macro" >
        <when value="line_and_polygon" >
            <expand macro="select_colors" />
            <expand macro="select_size" />
            <expand macro="select_stroke" />
            <expand macro="select_linetype" />
            <expand macro="select_lineend" />
            <expand macro="select_linejoin" />
        </when>
    </macro>
    <macro name="when_point_macro" >
        <when value="point" >
            <expand macro="select_colors" />
            <expand macro="select_shape" />
            <expand macro="select_size" />
        </when>
    </macro>
    <macro name="when_text_macro" >
        <when value="text" >
            <expand macro="select_fontfamily" />
            <expand macro="select_fontface" />
            <expand macro="select_fontjustification" />
            <param name="label" type="text" value="" label="Label" />
        </when>
    </macro>
</macros>
