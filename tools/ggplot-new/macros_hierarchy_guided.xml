<macros>
    <import>macros_plots_numeric.xml</import>
    <macro name="when_hierarchy_guided_macro" >
        <when value="guided" >
            <conditional name="chart_type" >
                <param name="use" type="select" label="Chart Type">
                    <option value="numeric">Numeric</option>
                    <option value="categoric">Categoric</option>
                    <option value="numandcat">Numeric and Categoric</option>
                    <option value="maps">Maps</option>
                    <option value="network">Network</option>
                    <option value="time">Time Series</option>
                </param>
                <expand macro="when_hierarchy_guided_numeric_macro" />
                <expand macro="when_hierarchy_guided_categoric_macro" />
                <expand macro="when_hierarchy_guided_numandcat_macro" />
                <expand macro="when_hierarchy_guided_maps_macro" />
                <expand macro="when_hierarchy_guided_network_macro" />
                <expand macro="when_hierarchy_guided_time_macro" />
            </conditional>
        </when>
    </macro>
    <macro name="when_hierarchy_guided_numeric_macro" >
        <when value="numeric" >
            <conditional name="decision_level_1" >
                <param name="use" type="select" label="Numeric Type">
                    <option value="one_vars">One Numeric Variable</option>
                    <option value="two_vars">Two Numeric Variables</option>
                    <option value="three_vars">Three Numeric Variables</option>
                    <option value="many_vars">Several Numeric Variables</option>
                </param>
                <expand macro="when_numeric_one_macro" />
                <when value="two_vars">
                    <expand macro="conditional_ordering" >
                        <when value="notordered" >
                            <conditional name="many_or_few" >
                                <param name="use" type="select" label="Points" >
                                    <option value="few">Few</option>
                                    <option value="many">Many</option>
                                </param>
                                <expand macro="when_numeric_two_notordered_few_macro" />
                                <expand macro="when_numeric_two_notordered_many_macro" />
                            </conditional>
                        </when>
                        <expand macro="when_numeric_two_ordered_macro" />
                    </expand>
                </when>
                <when value="three_vars" >
                    <expand macro="conditional_ordering" >
                        <expand macro="when_numeric_three_notordered" />
                        <expand macro="when_numeric_three_or_many_ordered" />
                    </expand>
                </when>
                <when value="many_vars" >
                    <expand macro="conditional_ordering" >
                        <!-- Yes this is a duplicate of the previous plots -->
                        <expand macro="when_numeric_three_or_many_ordered" />
                        <expand macro="when_numeric_many_notordered" />
                    </expand>
                </when>
            </conditional>
        </when>
    </macro>
