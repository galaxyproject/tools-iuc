<macros>
    <!-- Select Chart Option Text -->
    <macro name="option_2ddensityplot" >
        <option value="2ddensityplot" >2D Density Plot</option>
    </macro>
    <macro name="option_3dscatterorsurface" >
        <option value="3dscatterorsurface">3D Scatter Or Surface</option>
    </macro>
    <macro name="option_abline" >
        <option value="abline">AB Line</option>
    </macro>
    <macro name="option_areaplot" >
        <option value="areaplot">Area Plot</option>
    </macro>
    <macro name="option_barchart" >
        <option value="barchart">Bar Chart</option>
    </macro>
    <macro name="option_bin2d" >
        <option value="bin2d">Bin 2D</option>
    </macro>
    <macro name="option_boxplot" >
        <option value="boxplot">Box Plot</option>
    </macro>
    <macro name="option_bubbleplot" >
        <option value="bubbleplot">Bubble Plot</option>
    </macro>
    <macro name="option_connectedscatterplot" >
        <option value="connectedscatterplot">Connected Scatter Plot</option>
    </macro>
    <macro name="option_correlogram" >
        <option value="correlogram">Correlogram</option>
    </macro>
    <macro name="option_dendrogram" >
        <option value="dendrogram">Dendrogram</option>
    </macro>
    <macro name="option_densityplot" >
        <option value="densityplot">Density Plot</option>
    </macro>
    <macro name="option_heatmap" >
        <option value="heatmap">Heatmap</option>
    </macro>
    <macro name="option_histogram" >
        <option value="histogram">Histogram</option>
    </macro>
    <macro name="option_lineplot" >
        <option value="lineplot">Line Plot</option>
    </macro>
    <macro name="option_pca" >
        <option value="pca">PCA</option>
    </macro>
    <macro name="option_ridgeline" >
        <option value="ridgeline">Ridge Line</option>
    </macro>
    <macro name="option_scatterandmarginalplot" >
        <option value="scatterandmarginalplot">Scatter and Marginal Plot</option>
    </macro>
    <macro name="option_scatterplot" >
        <option value="scatterplot">Scatter Plot</option>
    </macro>
    <macro name="option_stackedareaplot" >
        <option value="stackedareaplot">Stacked Area Plot</option>
    </macro>
    <macro name="option_streamgraph" >
        <option value="streamgraph">Stream Graph</option>
    </macro>
    <macro name="option_violinplot" >
        <option value="violinplot">Violin Plot</option>
    </macro>
    <!-- Select Aesthetic option text -->
    <macro name="select_size" >
        <param name="size" type="float" min="0" value="1" label="fill Size" />
    </macro>
    <macro name="select_stroke" >
        <param name="stroke" type="float" min="0" value="1" label="Stroke Size" />
    </macro>
    <macro name="select_colors" >
        <param name="color" type="color" label="Colour" />
        <param name="fill" type="color" label="Fill" />
    </macro>
    <macro name="select_linetype" >
        <param name="linetype" type="select" label="Line Type" >
            <option value="blank" />
            <option value="solid" />
            <option value="dashed" />
            <option value="dotted" />
            <option value="dotdash" />
            <option value="longdash" />
            <option value="twodash" />
        </param>
    </macro>
    <macro name="select_lineend" >
        <param name="lineend" type="select" label="Line End" >
            <option value="round" />
            <option value="butt" selected="true" />
            <option value="square" />
        </param>
    </macro>
    <macro name="select_linejoin" >
        <param name="linejoin" type="select" label="Line Join" >
            <option value="mitre" />
            <option value="round" selected="true" />
            <option value="bevel" />
        </param>
    </macro>
    <macro name="select_fontfamily" >
        <param name="family" type="select" label="Font Family" >
            <option value="sans" />
            <option value="serif" selected="true" />
            <option value="mono" />
        </param>
    </macro>
    <macro name="select_fontface" >
        <param name="fontface" type="select" label="Font Face" >
            <option value="plain" >Plain</option>
            <option value="bold" >Bold</option>
            <option value="italic" >Italic</option>
            <option value="bold.italic" >Bold and Italic</option>
        </param>
    </macro>
    <macro name="select_fontjustification" >
        <param name="hjust" type="select" label="Horizontal Justification" >
            <option value="top" />
            <option value="middle" />
            <option value="bottom" />
            <option value="left" />
            <option value="center" />
            <option value="right" />
        </param>
        <param name="vjust" type="select" label="Vertical Justification" >
            <option value="top" />
            <option value="middle" />
            <option value="bottom" />
            <option value="left" />
            <option value="center" />
            <option value="right" />
        </param>
    </macro>
    <macro name="select_shape" >
        <param name="shape" type="select" label="Shape" >
            <option value="." >Tiny Rectangle</option>
            <option value="NA" >Blank</option>
            <option value="circle" />
            <option value="circle open" />
            <option value="circle filled" />
            <option value="circle cross" />
            <option value="circle plus" />
            <option value="circle small" />
            <option value="bullet" />
            <option value="square" />
            <option value="square open" />
            <option value="square filled" />
            <option value="square cross" />
            <option value="square plus" />
            <option value="square triangle" />
            <option value="diamond" />
            <option value="diamond open" />
            <option value="diamond filled" />
            <option value="diamond plus" />
            <option value="triangle" />
            <option value="triangle open" />
            <option value="triangle filled" />
            <option value="triangle square" />
            <option value="triangle down open" />
            <option value="triangle down filled" />
            <option value="plus" />
            <option value="cross" />
            <option value="asterisk" />
        </param>
    </macro>
</macros>
