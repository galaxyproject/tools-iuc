<tool id="beacon2-sequence" name="Beacon2 Sequence" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="21.05">
    <description>ÙŽQuery for the existence of a specified sequence at a given genomic position</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="creators"/>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[    
        beacon2-search sequence
        --db-host '$db_host'
        --db-port $db_port
        --database $database
        --collection $collection
        #if str($advanced_settings.authenticated_access.auth_req) == "yes":
            $advanced_settings.authenticated_access.advance_connection
            --db-auth-source $advanced_settings.authenticated_access.db_auth_source
            --db-user $advanced_settings.authenticated_access.db_user
            --db-password $advanced_settings.authenticated_access.db_password
        #end if
        --referenceName $referenceName
        --start $start
        --alternateBases $alternateBases
        --referenceBases $referenceBases
        #if str($advanced_settings.collectionIds)
            --collectionIds $advanced_settings.collectionIds
        #end if
        > sequenced_query_findings.txt
    ]]></command>
    <inputs>
        <expand macro="Connection_to_MongoDB" />
        <expand macro="Database_Configuration" />
        <param argument="--referenceName" type="text" label="REFERENCENAME" value="" help="Reference name in numbers chr1/1, chr2/2, chr3/3, etc." />
        <param argument="--start" type="integer" label="START" value="" help="Start position" />
        <param argument="--alternateBases" type="text" label="Alternate bases" value="" help="" />
        <param argument="--referenceBases" type="text" label="Reference bases" value="" help="" />
        <section name="advanced_settings" title="Advanced settings" expanded="false">
            <conditional name="authenticated_access">
                <param name="auth_req" type="select" label="Access authenticated beacon" help="">
                    <option value="no" selected="True">No</option>
                    <option value="yes">Yes</option>
                </param>
                <when value="no">
                </when>
                <when value="yes">
                    <expand macro="Advanced_Connection_to_MongoDB" />
                </when>
            </conditional> 
            <param argument="--collectionIds"  optional="true" type="text" label="Collection ID" value="" help="Datasets ID" />
        </section>
    </inputs>
    <outputs>
        <data name="out_sequence_guery" format="txt" label="${tool.name} on ${on_string}: Sequence Query" from_work_dir="sequenced_query_findings.txt" />
    </outputs>
    <tests>
        <test expect_num_outputs="1">
            <param name="database" value="beacon" />
            <param name="collection" value="genomicvarients" />
            <param name="db-host" value="20.108.51.167" />
            <param name="auth_req" value="yes" />
            <param name="advance_connection" value="1" />
            <param name="db_auth_source" value="admin" />
            <param name="db_user" value="admin" />
            <param name="db_password" value="adminpass" />
            <param name="referenceName" value="chr2" />
            <param name="start" value="500" />
            <param name="alternateBases" value="A" />
            <param name="referenceBases" value="T" />
            <output name="out_sequence_guery">
                <assert_contents><has_text_matching expression="start"/></assert_contents>
            </output>
        </test>
    </tests>
    <help><![CDATA[
        Sequence Queries query for the existence of a specified sequence at a given genomic position. Such queries correspond to the original Beacon queries and are used to match short, precisely defined genomic variants such as SNVs and INDELs.
    ]]></help>
    <expand macro="citations" />
</tool>
