<tool id="fastreer_vcf2dist" name="VCF2DIST" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
    <description>Cosine distance matrix from VCF files</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <expand macro="version_command"/>
    <command detect_errors="exit_code"><![CDATA[
        fastreeR VCF2DIST 
        #for $f in $input_vcfs:
            -i '$f'   
        #end for
        -o '$output'
        --threads \${GALAXY_SLOTS:-1}
        --verbose
    ]]></command>
    <inputs>
        <param name="input_vcfs" type="data" format="vcf,vcf_bgzip" multiple="true" label="VCF input files" help="VCF input files"/>
    </inputs>
    <outputs>
        <data name="output" format="txt" label="Distance Matrix"/>
    </outputs>
    <tests>
        <test>
            <param name="input_vcfs" value="test.vcf"/>
            <output name="output" file="expected.vcf.dist"/>
        </test>
    </tests>
    <help><![CDATA[
        Computes a cosine dissimilarity matrix between all samples in one or more VCF files.
        Supports multithreaded execution and filtering options for heterozygosity and missing data.
    ]]></help>
    <expand macro="citations"/>
</tool>
