            <param name="use" value="yes"/>
            <param name="qfile_in" value="Mock_S280_L001_R1_001_small.trim.contigs.qual"/>
            <param name="alignreport_in" value="Mock_S280_L001_R1_001_small.trim.contigs.good.align.report"/>
