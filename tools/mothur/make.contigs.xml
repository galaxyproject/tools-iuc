                </assert_contents>
            </output>
            <output name="qual" md5="1e7778cee0d86bfa2759a07bb4356165" ftype="qual">
                <assert_contents>
    	    	    <has_text text=">M00967_43_000000000-A3JHG_1_1101_19936_3208" />
                </assert_contents>
            </output>
            <output name="report" md5="5274725ef45890fd6da4650d5d536173" ftype="txt">
