<tool profile="16.07" id="mothur_summary_seqs" name="Summary.seqs" version="@WRAPPER_VERSION@.0">
    <description>Summarize the quality of sequences</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <expand macro="stdio"/>
    <expand macro="version_command"/>
    <command><![CDATA[
@SHELL_OPTIONS@

## create symlinks to input datasets
ln -s '$infile.inputfile' input.dat &&
#if $infile.informat == "fasta":
    ln -s '$infile.name' name.dat &&
    ln -s '$infile.count' count.dat &&
#end if

echo 'summary.seqs(
    #if $infile.informat == "fasta":
        fasta=input.dat,
        #if $infile.name:
            name=name.dat,
        #end if
        #if $infile.count:
            count=count.dat,
        #end if
    #end if
    #if $infile.informat == "summary":
        summary=input.dat,
    #end if
    #if $infile.informat == "alignreport":
        alignreport=input.dat,
    #end if
    #if $infile.informat == "contigsreport":
        contigsreport=input.dat,
    #end if
    processors='\${GALAXY_SLOTS:-8}'
)'
| sed 's/ //g'  ## mothur trips over whitespace
| mothur
| tee mothur.out.log

## for input types other than fasta, output was written to logfile, extract the relevant lines to an output file
#if $infile.informat != "fasta":
    && cat mothur.out.log |sed '1,37d' | sed '11,\$d' > $out_summary_table
    && echo "---" && cat $out_summary_table
#end if
    ]]></command>
    <inputs>
        <conditional name="infile">
            <param name="informat" type="select" label="Type op input file you would lilke to summarize">
                <option value="fasta">fasta and name/count</option>
                <option value="alignreport">alignreport</option>
                <option value="contigsreport">contigsreport</option>
                <option value="summary">summary</option>
            </param>
            <when value="fasta">
                <param name="inputfile" type="data" format="fasta,mothur.align" label="fasta - Dataset"/>
                <param name="name" type="data" format="mothur.names" label="name - Names" optional="true"/>
                <param name="count" type="data" format="mothur.count_table" optional="true" label="count - a count_table" help="The count file is similar to the name file in that it is used to represent the number of duplicate sequences for a given representative sequence. "/>
            </when>
            <when value="summary">
                <param argument="inputfile" type="data" format="mothur.summary" label="summary file" help="as created by summary.seqs"/>
            </when>
            <when value="alignreport">
                <param argument="inputfile" type="data" format="mothur.align.report" label="alignreport"/>
            </when>
            <when value="contigsreport">
                <param argument="inputfile" type="data" format="tabular" label="contigsreport" help="this file is created by the make.contigs command"/>
            </when>
        </conditional>
        <expand macro="param-savelog"/>
    </inputs>
    <outputs>
        <expand macro="logfile-output"/>
        <data name="out_summary" format="mothur.summary" from_work_dir="input*.summary" label="${tool.name} on ${on_string}: summary">
            <filter>infile['informat'] == "fasta" </filter>
        </data>
        <data name="out_summary_table" format="tabular" label="${tool.name} on ${on_string}: summary">
            <filter>infile['informat'] != "fasta" </filter>
        </data>
    </outputs>
    <tests>
        <test>
            <param name="informat" value="fasta" />
            <param name="inputfile" value="Mock_S280_L001_R1_001_small.trim.contigs.fasta" ftype="fasta"/>
            <output name="out_summary" file="Mock_S280_L001_R1_001_small.trim.contigs.summary" ftype="mothur.summary"/>
            <param name="savelog" value="true"/>
            <expand macro="logfile-test"/>
        </test>
        <test><!-- test names input -->
            <param name="informat" value="fasta" />
            <param name="inputfile" value="amazon.unique.fasta" ftype="fasta"/>
            <param name="name" value="amazon.names" ftype="mothur.names"/>
            <output name="out_summary" md5="b8a53926f64434291d232d2736da8293" ftype="mothur.summary"/>
            <param name="savelog" value="true"/>
            <expand macro="logfile-test"/>
        </test>
        <test><!-- test count input -->
            <param name="informat" value="fasta" />
            <param name="inputfile" value="amazon.unique.fasta" ftype="fasta"/>
            <param name="count" value="amazon.count_table" ftype="mothur.count_table"/>
            <output name="out_summary" md5="b8a53926f64434291d232d2736da8293" ftype="mothur.summary"/>
            <param name="savelog" value="true"/>
            <expand macro="logfile-test"/>
        </test>
        <test> <!-- test with contigsreport input  -->
            <param name="informat" value="contigsreport" />
            <param name="inputfile" value="Mock_S280_L001_R1_001_small.contigs.report"/>
            <output name="out_summary_table">
                <assert_contents>
                    <expand macro="test-summary-table"/>
                </assert_contents>
            </output>
            <param name="savelog" value="true"/>
            <expand macro="logfile-test"/>
        </test>
        <test> <!-- test with summary input  -->
            <param name="informat" value="summary" />
            <param name="inputfile" value="Mock_S280_L001_R1_001_small.trim.contigs.summary"/>
            <output name="out_summary_table">
                <assert_contents>
                    <expand macro="test-summary-table"/>
                </assert_contents>
            </output>
            <param name="savelog" value="true"/>
            <expand macro="logfile-test"/>
        </test>
        <test> <!-- test with alignreport input  -->
            <param name="informat" value="alignreport" />
            <param name="inputfile" value="Mock_S280_L001_R1_001_small.contigs.good.align.report"/>
            <output name="out_summary_table">
                <assert_contents>
                    <expand macro="test-summary-table"/>
                </assert_contents>
            </output>
            <param name="savelog" value="true"/>
            <expand macro="logfile-test"/>
        </test>
    </tests>
    <help><![CDATA[

@MOTHUR_OVERVIEW@

**Command Documentation**

The summary.seqs_ command will summarize the quality of sequences in an unaligned or aligned fasta-formatted sequence file.


.. _summary.seqs: https://www.mothur.org/wiki/Summary.seqs

    ]]></help>
    <expand macro="citations"/>
</tool>
