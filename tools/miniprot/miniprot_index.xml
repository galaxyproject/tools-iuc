<tool id="miniprot_index" name="Miniprot index" version="@TOOL_VERSION@+galaxy0" profile="21.05">
    <macros>
        <import>macros.xml</import>
    </macros>
    <requirements>
        <requirement type="package" version="@TOOL_VERSION@">miniprot</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        miniprot -d '$output_index' '$input_genome'
    ]]></command>
    <inputs>
        <param name="input_genome" type="data" format="fasta,fasta.gz" label="Genomic sequence (FASTA)" help="Genomic contigs / scaffolds to be aligned against in FASTA format" />
    </inputs>
    <outputs>
        <!-- refine this when miniprot index format is in Galaxy datatypes -->
        <data name="output_index" format="binary" label="Miniprot index on ${on_string}" />
    </outputs>
    <tests>
    </tests>
    <help><![CDATA[
        Pre-index genomic sequences (contigs, scaffolds or chromosomes) for use in the miniprot protein to genome alignment tool.
    ]]></help>
</tool>