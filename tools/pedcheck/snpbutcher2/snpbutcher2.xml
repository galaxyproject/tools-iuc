<tool id="snpbutcher2" name="SNP Butcher" version="2.8" python_template_version="3.5">
    <requirements>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        --hg19 $useHumanGenome --uninformative $uninformative --zeromaf $zeromaf --nohapmap $nohapmap --centimorgans N $centimorgansN --spacing N $spacingN
    ]]></command>
    <inputs>
      <param name='useHumanGenome' type='data' format='txt' label='Human Genome ver:19'/>
      <param name='uninformative' type='data' format='txt' label='Include Uninformative Markers'/>
      <param name='zeromaf' type='data' format='txt' label='Include Zero Minor Allele Frequency Markers'/>
      <param name='nohapmap' type='boolean' truevalue=”--enable-nohapmap” falsevalue=”” label='Include Uninformative Markers'/>
      <param name='centimorgansN' type='data' value='0.05' format='txt' label='Space Markers at N cM'/>
      <param name='spacingN' type='select' value='-u && -z' format='txt' label='Select Markers at Intervals of N, or Specify the Max Number
      of Markers N, or Select at Intervals of N CentiMorgans'>
        <option value="selectMarkers" selected='true'>Select Markers at Intervals of N</option>
        <option value="maxNumOfMarkers">Specify the Max Numbre of Markers N</option>
        <option value="selectIntervals/">Select at Intervals of N CentiMorgans</option>
      </param>
    </inputs>
    <outputs>
      <data name='output' format='txt'/>
    </outputs>
    <help><![CDATA[
        TODO: Fill in help.
    ]]></help>
</tool>