<tool id="genomic_super_signature_downloader" name="GenomicSuperSignature model downloader" version="0.1.0" profile="20.01">
    <requirements>
        <requirement type="package" version="1.0.1">bioconductor-genomicsupersignature</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        Rscript gss_downloader.R
    ]]></command>
    <configfiles>
        <configfile name="gss_downloader" filename="gss_downloader.R"><![CDATA[
library(GenomicSuperSignature)
RAVmodel <- getModel("$model", load=TRUE)
saveRDS(RAVmodel, file = "$model_output")
        ]]></configfile>
    </configfiles>
    <inputs>
        <param type="select" name="model" label="Select model to download">
            <option value="PLIERpriors">PLIER</option>
            <option value="C2">MSigDB C2</option>
        </param>
    </inputs>
    <outputs>
        <data name="model_output" format="rdata" label="${model} for GenomicSuperSignature"/>
    </outputs>
    <help><![CDATA[
        TODO: Fill in help.
    ]]></help>
</tool>