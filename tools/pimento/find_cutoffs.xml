<tool id="pimento_find_cutoffs" name="PIMENTO Find cutoffs" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" license="@LICENSE@">
    <description>Identifies potential primer cutoff points from base-conservation vectors</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="creators"/>
    <expand macro="requirements"/>
    <command detect_errors="aggressive"><![CDATA[
        pimento find_cutoffs -i '$input_bcv' -o sample
    ]]></command>
    <inputs>
        <param name="input_bcv" type="data" label="BCV input file" format="tsv"/>
    </inputs>    
    <outputs>
        <data name="output" label="${tool.name} on ${on_string}: Predicted cutoff points" format="tsv" from_work_dir="sample_cutoffs.tsv"/>
    </outputs>
    <tests>
        <test expect_num_outputs="1">
            <param name="input_bcv" value="test_bcv.tsv"/>
            <output name="output">
                <assert_contents>
                    <has_text text="strand"/>
                    <has_text text="inf_point"/>
                    <has_text text="F"/>
                    <has_text text="14"/>
                    <has_n_lines n="3"/>
                    <has_n_columns n="2"/>
                </assert_contents>
            </output>
        </test>
    </tests>
    <help><![CDATA[ 
        Find the potential cutoffs in a base-conservation vector output file. By
        computing negative inflection points in the base-conservation vectors, this
        function identifies potential cutoff points to be considered as primer
        cutoff points in the next and final step of the primer cutoff inference
        strategy. These potential cutoffs are saved to a TSV file.
    ]]></help>
    <expand macro="citations" />
</tool>
