<tool id="pairtools_split" name="Pairtools split" version="@TOOL_VERSION@+galaxy@SUFFIX_VERSION@" profile="@PROFILE_VERSION@" license="MIT">
    <description>Split a pairsam file into pairs and SAM/BAM</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[
        #if $pairsam_path.is_of_type('4dn_pairsam.gz'):
            #set $input_temp = "input.gz"
        #else
            #set $input_temp = "input"
        #end if
        ln -s '$pairsam_path' '$input_temp' &&

        #set $output_pairs_temp = "output_pairs" + str($compress_output)
        ln -s '$output_pairs' '$output_pairs_temp' &&
        pairtools split
            '$input_temp'
            --output-pairs '$output_pairs'
            --output-sam ./output.bam
            --nproc-in \${GALAXY_SLOTS:-4}
            --nproc-out \${GALAXY_SLOTS:-4}
    ]]></command>
    <inputs>
        <param name="pairsam_path" type="data" format="4dn_pairsam,4dn_pairsam.gz" label="Input 4dn pairsam file"/>
        <param name="compress_output" type="boolean" truevalue=".gz" falsevalue="" checked="false" label="Compress output files" />
    </inputs>
    <outputs>
        <data name="output_pairs" label="${tool.name} on ${on_string}: Output Pairs"  format="auto" />
        <data name="output_file" format="qname_sorted.bam" from_work_dir="output.bam" label="${tool.name} on ${on_string}: Output BAM" />
    </outputs>
    <tests>
        <!--Test default parameters-->
        <test expect_num_outputs="2">
            <param name="pairsam_path" value="output_dedup_pairs_markdups.pairsam"/>
            <output name="output_pairs" file="output_pairs_split.pairs" lines_diff="10"/>
            <output name="output_file" ftype="qname_sorted.bam" file="output_pairs_split.bam" lines_diff="20"/>
        </test>
        <!--Test default parameters and compress output_pairs-->
        <test expect_num_outputs="2">
            <param name="pairsam_path" value="output_dedup_pairs_markdups.pairsam"/>
            <param name="compress_output" value="true"/>
            <output name="output_pairs" file="output_pairs_split.pairs" decompress="true" lines_diff="10"/>
            <output name="output_file" ftype="qname_sorted.bam" file="output_pairs_split.bam" lines_diff="20"/>
        </test>
        <!--Test default parameters and compressed input-->
        <test expect_num_outputs="2">
            <param name="pairsam_path" value="output_dedup_pairs_markdups.pairsam.gz"/>
            <output name="output_pairs" file="output_pairs_split.pairs" lines_diff="10"/>
            <output name="output_file" ftype="qname_sorted.bam" file="output_pairs_split.bam" lines_diff="20"/>
        </test>
    </tests>
    <help><![CDATA[
        **Pairtools split**

        Restore a SAM/BAM file from SAM1 and SAM2 fields of a `pairsam` file. Create a `pairs` file without SAM1/SAM2 fields.
              
    ]]></help>
    <expand macro="citations"/>
    <expand macro="creator"/>
</tool>
