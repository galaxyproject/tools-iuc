<tool id="pl.paga_compare" name="pl.paga_compare" version="1.3.1+galaxy1">
    <description>Scatter and PAGA graph side-by-side</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[
          python $script_file
      ]]></command>
    <configfiles>
        <configfile name="script_file"><![CDATA[
@CMD_imports@
@CMD_read_inputs@
sc.settings.figdir = '.'

sc.pl.paga_compare(
    adata=adata,
    kwds_scatter = '$kwds_scatter',
    @CMD_params_pl_paga@
    show=False,
    save='.$format')
]]></configfile>
    </configfiles>
    <inputs>
        <expand macro="inputs_anndata"/>
        <param name="kwds_scatter" type="dict" value="" label="kwds_scatter" help="    Keywords for :func:`~scanpy.api.pl.scatter`."/>
        <expand macro="inputs_paga"/>
    </inputs>
    <outputs>
        <expand macro="plot_output"/>
    </outputs>
    <tests>
      <test>
        <param name="kwds_scatter" value=""/>
        <param name="kwds_paga" value=""/>
        <expand macro="tests_set_figure_params"/>
      </test>
    </tests>
    <help><![CDATA[
Scatter and PAGA graph side-by-side, consists in a scatter plot and the abstracted graph. See
    ]]></help>
  <expand macro="citations"/>
</tool>
