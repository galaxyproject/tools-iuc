<macros>
    <token name="@VERSION@">6.6.0</token>
    <xml name="requirements">
        <requirements>
            <requirement type="package" version="@VERSION@">emboss</requirement>
        </requirements>
    </xml>
    <xml name="stdio">
        <stdio>
            <regex level="fatal_oom" match="insufficient memory available" source="both" />
            <exit_code range="1:" />
        </stdio>
    </xml>
    <xml name="bio_tools">
        <xrefs>
            <xref type="bio.tools">emboss</xref>
        </xrefs>
    </xml>
    <xml name="citations">
        <citations>
            <citation type="doi">10.1016/S0168-9525(00)02024-2</citation>
            <citation type="doi">10.1101/gr.5578007</citation>
            <yield />
        </citations>
    </xml>
    <xml name="regex_sanitizer">
        <sanitizer>
            <valid initial="string.ascii_letters,string.digits">
                <add value="^"/>
                <add value="$"/>
                <add value="("/>
                <add value=")"/>
                <add value="|"/>
                <add value="?"/>
                <add value="*"/>
                <add value="+"/>
                <add value="{"/>
                <add value="}"/>
                <add value="\"/>
                <add value="["/>
                <add value="]"/>
                <add value="."/>
                <add value=","/>
            </valid>
        </sanitizer>
        <validator type="empty_field" />
        <validator type="regex" message="Pattern must not end with backslash.">.*[^\\]$</validator>
    </xml>
    <xml name="report_formats" tokens="output">
      <change_format>
        <when input="@OUTPUT@" value="seqtable"  format="seqtable" />
        <when input="@OUTPUT@" value="embl"      format="embl" />
        <when input="@OUTPUT@" value="genbank"   format="genbank" />
        <when input="@OUTPUT@" value="gff"       format="gff" />
        <when input="@OUTPUT@" value="pir"       format="pir" />
        <when input="@OUTPUT@" value="swiss"     format="swiss" />
        <when input="@OUTPUT@" value="dbmotif"   format="dbmotif" />
        <when input="@OUTPUT@" value="diffseq"   format="diffseq" />
        <when input="@OUTPUT@" value="excel"     format="tabular" />
        <when input="@OUTPUT@" value="feattable" format="feattable" />
        <when input="@OUTPUT@" value="motif"     format="motif" />
        <when input="@OUTPUT@" value="regions"   format="regions" />
        <when input="@OUTPUT@" value="simple"    format="simple" />
        <when input="@OUTPUT@" value="srs"       format="srs" />
        <when input="@OUTPUT@" value="table"     format="table" />
        <when input="@OUTPUT@" value="tagseq"    format="tagseq" />
      </change_format>
    </xml>
</macros>
