g <- lapply(a, function(x) as.numeric(unlist(regmatches(x,gregexpr("(?>-)*[[:digit:]]+\\.*[[:digit:]]*", x, perl=TRUE)))))

b <- gsub("\\b\\d+\\b", "", a)
c <- gsub("[.]", "", b)
d <- gsub("-", "", c)
e <- strsplit(d, ",")
f <- lapply(e, function(x) gsub(" ", "", x))


len <- c()
for (i in seq(f)){
  len <- c(l, length(f[[i]]))
}

max_len <- max(len) 

for (i in seq(f)){
  for (j in 1:max_len){
    if (!is.na(f[[i]][j]) == TRUE && f[[i]][j] == ""){
      f[[i]][j] <- NA
    }
  }
}

f <- lapply(f, function(x) x[!is.na(x)])

n <- list()
for (i in seq(f)){
  n <- append(n, list(list(f[[i]])))
}

for (i in seq(n)){
  n[[i]] <- append(n[[i]], g[[1]][[i]])
}

p <- list(list())
for (i in seq(f)){
  for (j in seq(f[[i]])){
    p[[i]] <- append(p[[i]], list(list(f[[i]][j])))
  } 
}

p <- lapply(f[[1]], function(x) strsplit(x, " "))


------------------------------------------------------------------


w <- list()

for (i in seq(f)){
  for (j in 1:max_len){
    if (!is.na(f[[i]][j]) == TRUE && f[[i]][j] != ""){
      w <- append(w, f[[i]])
    }
  }
}

n <- list()
for (i in seq(f)){
  for (j in 1:max_len){
    if (!is.na(f[[i]][j]) == ""){
      n <- append(n, g[[i]][j])
    }
  }
}

n <- as.numeric(n)

m <- list()
for (i in seq(w)){
  m <- append(m, w[i])
}

for (i in seq(n)){
  m <- append(m, n[i])
}

m <- list('params' = m)

# y is the nested list with query

for (i in seq(y)){ y[[i]] <- append(y[[i]], m)}

