<tool id="annotate" name="annotate" version="0.1.0">
    <requirements>
        <requirement type="package" version="4.0.0beta2">mummer4</requirement>
    </requirements>
    <command detect_errors="exit_code">
        <![CDATA[
        annotate
            '$mgaps'
            '$sequence' > '$output'
        ]]>
    </command>
    <inputs>
        <param name="mgaps" type="data" format="txt" label="mgaps file" />
        <param name="sequence" type="data" format="fasta" label="The 2nd sequence in the comparison" help="" />
    </inputs>
    <outputs>
        <data name="output" format="txt" from_work_dir="annotate.txt" />
    </outputs>
    <tests>
        <test>
            <param name="mgaps" ftype="txt" value="mgaps.txt" />
            <param name="sequence" ftype="fasta" value="O157.fasta" />
            <output name="output" ftype="txt" value="annotate.txt" />
        </test>
    </tests>
    <help><![CDATA[
        This program reads the output of the gaps program and adds alignment information to it.
    ]]></help>
    <citations>
        <citation type="bibtex">
            @misc{githubmummer,
            author = {Art Delcher, Stefan Kurtz, Adam Phillippy, Steven Salzberg},
            year = {2012},
            title = {mummer4},
            publisher = {GitHub},
            journal = {GitHub repository},
            url = {https://github.com/mummer4/mummer},
        }</citation>
    </citations>
</tool>