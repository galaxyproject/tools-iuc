<tool id="minfi_pheno" name="Minfi Pheno" version="@MINFI_VERSION@">
    <description>extract sample-by-phenotype data frame</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements" />
    <command detect_errors="exit_code">
    <![CDATA[
     Rscript '$minfi_pheno_script'
    ]]>
    </command>
    <configfiles>
    <configfile name="minfi_pheno_script"><![CDATA[
require("minfi", quietly = TRUE)

GRSet <- get(load('$input1'))

pheno <- pData(GRSet)

write.table(pheno, '$output1')
  ]]> 
    </configfile>
    </configfiles>  

    <inputs>
        <param type="data" name="input1" format="rdata" />
    </inputs>
    <outputs>
        <data name="output1" format="txt" />
    </outputs>
    <tests>
        <test>
            <param name="input1" value="GRSet.rdata"/>
            <output name="output1" file="phenodata.txt"/>
        </test>
    </tests>
    <help><![CDATA[
        Extract phenotype data from a ballgown object and return sample-by-phenotype data frame
    ]]></help>
    <expand macro="citations" />
</tool>
