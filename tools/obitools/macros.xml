            <valid initial="default">
                <!--add value="&quot;"/-->
            </valid>
            <mapping initial="default">
                <add source="&gt;" target="\&gt;"/>
                <add source="&quot;" target="\&quot;"/>
            </mapping>
        </sanitizer>
    </xml>

