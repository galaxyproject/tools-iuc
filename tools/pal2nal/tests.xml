<?xml version="1.0" encoding="UTF-8"?>
<macros>
    <xml name="tests">
        <tests>
            <test>
                <param name="protein_alignment" value="test.aln" />
                <repeat name="nucleotide_fastas">
                    <param name="nucleotide_fasta" value="test.nuc" />
                </repeat>
                <param name="output_format" value="paml" />
                <output name="output_file" file="expected_paml.paml" />
            </test>
            <test>
                <param name="protein_alignment" value="test.aln" />
                <repeat name="nucleotide_fastas">
                    <param name="nucleotide_fasta" value="test.nuc" />
                </repeat>
                <param name="output_format" value="clustal" />
                <output name="output_file" file="expected_clustal.aln" />
            </test>
            <test>
                <param name="protein_alignment" value="test.aln" />
                <repeat name="nucleotide_fastas">
                    <param name="nucleotide_fasta" value="test.nuc" />
                </repeat>
                <param name="output_format" value="fasta" />
                <param name="nogap" value="true" />
                <output name="output_file" file="expected_nogap.fasta" />
            </test>
            <test>
                <param name="protein_alignment" value="test.aln" />
                <repeat name="nucleotide_fastas">
                    <param name="nucleotide_fasta" value="test.nuc" />
                </repeat>
                <param name="output_format" value="codon" />
                <output name="output_file" file="expected_codon.txt" />
            </test>
        </tests>
    </xml>
</macros>
