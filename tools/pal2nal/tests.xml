<?xml version="1.0" encoding="UTF-8"?>
<macros>
    <xml name="tests">
        <tests>
            <test>
                <param name="protein_alignment" value="inputs/test.aln" />
                <repeat name="nucleotide_fastas">
                    <param name="nucleotide_fasta" value="inputs/test.nuc" />
                </repeat>
                <param name="output_format" value="paml" />
                <output name="output_file" file="outputs/expected_paml.paml" />
            </test>
            <test>
                <param name="protein_alignment" value="inputs/test.aln" />
                <repeat name="nucleotide_fastas">
                    <param name="nucleotide_fasta" value="inputs/test.nuc" />
                </repeat>
                <param name="output_format" value="clustal" />
                <output name="output_file" file="outputs/expected_clustal.aln" />
            </test>
            <test>
                <param name="protein_alignment" value="inputs/test.aln" />
                <repeat name="nucleotide_fastas">
                    <param name="nucleotide_fasta" value="inputs/test.nuc" />
                </repeat>
                <param name="output_format" value="fasta" />
                <param name="nogap" value="true" />
                <output name="output_file" file="outputs/expected_nogap.fasta" />
            </test>
            <test>
                <param name="protein_alignment" value="inputs/test.aln" />
                <repeat name="nucleotide_fastas">
                    <param name="nucleotide_fasta" value="inputs/test.nuc" />
                </repeat>
                <param name="output_format" value="codon" />
                <output name="output_file" file="outputs/expected_codon.txt" />
            </test>
            <test>
                <param name="protein_alignment" value="inputs/test.aln" />
                <repeat name="nucleotide_fastas">
                    <param name="nucleotide_fasta" value="inputs/test_bc070280.fasta" />
                    <param name="nucleotide_fasta" value="inputs/test_pseudogene.fasta" />
                </repeat>
                <param name="output_format" value="clustal" />
                <output name="output_file" file="outputs/expected_clustal_multi.aln" />
            </test>
            <test>
                <param name="protein_alignment" value="inputs/test.aln" />
                <repeat name="nucleotide_fastas">
                    <param name="nucleotide_fasta" value="inputs/test.nuc" />
                </repeat>
                <param name="output_format" value="clustal" />
                <param name="blockonly" value="true" />
                <param name="nomismatch" value="true" />
                <param name="codontable" value="2" />
                <param name="html_output" value="true" />
                <param name="nostderr" value="true" />
                <output name="output_file" file="outputs/expected_html.html" />
            </test>
        </tests>
    </xml>
</macros>
