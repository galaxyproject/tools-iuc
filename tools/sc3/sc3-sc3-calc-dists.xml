<?xml version="1.0" encoding="utf-8"?>
<tool id="sc3-sc3-calc-dists" name="SC3 calculate distances" version="@TOOL_VERSION@+galaxy0">
    <description>Calculate distances between cells</description>
    <macros>
        <import>sc3-macros.xml</import>
    </macros>
    <expand macro="requirements" />
    <command detect_errors="exit_code"><![CDATA[
        sc3-sc3-calc-dists.R -i "$input1" -o "$output1"
    ]]></command>
    <inputs>
        <param type="data" name="input1" format="rds" label="File name in which a serialized R SingleCellExperiment object where object matrix found"/>
    </inputs>
    <outputs>
        <data name="output1" format="rds" />
    </outputs>
    <tests>
        <test>
            <param name="input1" value="R_sc3_transformed.rds"/>
            <output name="output1" file="R_sc3_distance.rds"/>
        </test>
    </tests>
    <help><![CDATA[
    ]]></help>
    <expand macro="citations" />
</tool>