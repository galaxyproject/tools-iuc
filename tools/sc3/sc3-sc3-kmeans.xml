<?xml version="1.0" encoding="utf-8"?>
<tool id="sc3-sc3-kmeans" name="SC3 kmeans" version="@TOOL_VERSION@+galaxy0">
    <description>Perform k-Means clustering on cells</description>
    <macros>
        <import>sc3-macros.xml</import>
    </macros>
    <expand macro="requirements" />
    <command detect_errors="exit_code"><![CDATA[
        sc3-sc3-kmeans.R -i $input1.rds -k "$input2" -o "$output1" 
    ]]></command>
    <inputs>
        <param type="data" name="input1" format="rds" label="SC3 processed object"/>
        <param type="data" name="input2" format="text" label="K selected for k-means clustering"/>
    </inputs>
    <outputs>
        <data name="output1" format="rds" label="SC3 object to store the K-means clusters"/>
    </outputs>
    <tests>
        <test>
            <param name="input1" value="R_sc3_distance"/>
            <param name="input2" value="K_size"/>
            <output name="output1" file="R_sc3_kmeans.rds"/>
        </test>
    </tests>
    <help><![CDATA[
    ]]></help>
    <expand macro="citations" />
</tool>