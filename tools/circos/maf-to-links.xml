<?xml version="1.0"?>
<tool id="circos_maf_to_links" name="Circos: MAF to links" version="@WRAPPER_VERSION@">
    <description>reformats MAF (Multiple Alignment Format) files to prepare for Circos.</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements">
    </expand>
    <command detect_errors="exit_code"><![CDATA[
python '$__tool_directory__/maf-to-links' '$input' > '$output'
    ]]></command>
    <inputs>
        <param name="input" type="data" format="maf" label="Data file" />
    </inputs>
    <outputs>
        <data name="output" format="tabular" />
    </outputs>
    <tests>
    </tests>
    <help><![CDATA[
Converts standard MAF alignments into a format appropriate for Circos plots.
    ]]></help>
    <expand macro="citations" />
</tool>
