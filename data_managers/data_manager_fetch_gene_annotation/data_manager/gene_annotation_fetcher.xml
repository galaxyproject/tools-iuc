<tool id="gene_annotation_fetcher_data_manager" name="Gene Annotation Fetcher" tool_type="manage_data" version="1.0.2">
    <description></description>
    <requirements>
        <requirement type="package" version="3.8.3">python</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
python '$__tool_directory__/data_manager.py'
--value '$value'
--description '$description'
--name '$name'
--out_file '$out_file'
--url '$url'
]]>
    </command>
    <inputs>
        <param name="value" type="text" label="Data table entry unique ID"/>
        <param name="name" type="text" label="Name"/>
        <param name="description" type="text" value="" label="Description of the data" help="Value is optional"/>
        <param name="url" type="text" label="URL for downloading gene annotation file"/>
    </inputs>
    <outputs>
        <data name="out_file" format="data_manager_json"/>
    </outputs>
    <tests>
        <test>
            <param name="value" value="hg38chr13"/>
            <param name="name" value="hg38chr13"/>
            <param name="description" value="hg38 chr 13"/>
            <param name="url" value="ftp://ftp.ensembl.org/pub/release-91/gff3/homo_sapiens/Homo_sapiens.GRCh38.91.chromosome.13.gff3.gz"/>
            <output name="out_file" value="gff_gene_annotations.json" compare="contains"/>
        </test>
    </tests>
    <help>
.. class:: infomark

**What it does**

Fetches gene annotation files and populates the gff_gene_annotations data table.
    </help>
    <citations>
        <citation type="bibtex">
            @unpublished{None,
            author = {scottx611x},
            title = {None},
            year = {None},
            eprint = {None},
            url = {https://github.com/galaxyproject/tools-iuc/tree/master/data_managers/data_manager_fetch_gene_annotation}
        }</citation>
    </citations>
</tool>

