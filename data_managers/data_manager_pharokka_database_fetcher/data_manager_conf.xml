<?xml version="1.0"?>
<data_managers>

    <data_manager tool_file="data_manager/pharokka_db_fetcher.xml" id="pharokka_db_fetcher" version="1.3">
        <data_table name="pharokka_db_versioned">
            <output>
                <column name="value" />
                <column name="dbkey" />
                <column name="version" />
                <column name="name" />
                <column name="path" output_ref="out_file" >
                    <move type="directory" relativize_symlinks="True">
                        <source>${path}</source>
                        <target base="${GALAXY_DATA_MANAGER_DATA_PATH}">pharokka_database/${value}</target>
                    </move>
                    <value_translation>${GALAXY_DATA_MANAGER_DATA_PATH}/pharokka_database/${value}</value_translation>
                    <value_translation type="function">abspath</value_translation>
                </column>
            </output>
        </data_table>
    </data_manager>

</data_managers>
