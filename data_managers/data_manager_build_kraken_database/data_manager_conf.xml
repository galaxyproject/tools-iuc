<?xml version="1.0"?>
<data_managers>
    <data_manager tool_file="data_manager/kraken_database_builder.xml" id="kraken_database_builder" version="1.1.0">
        <data_table name="kraken_databases">
            <output>
                <column name="value" />
                <column name="name" />
                <column name="path" output_ref="out_file">
                    <move type="directory" relativize_symlinks="True">
                        <target base="${GALAXY_DATA_MANAGER_DATA_PATH}">kraken_database/${value}</target>
                    </move>
                    <value_translation>${GALAXY_DATA_MANAGER_DATA_PATH}/kraken_database/${value}</value_translation>
                    <value_translation type="function">abspath</value_translation>
                </column>
            </output>
        </data_table>
    </data_manager>
</data_managers>
