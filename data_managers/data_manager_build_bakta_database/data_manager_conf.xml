<data_managers>
    <data_manager tool_file="data_manager/bakta_build_database.xml" id="data_manager_build_bakta_database" version="2.1.1+galaxy0">
        <data_table name="bakta_database">
            <output>
                <column name="value"/>
                <column name="dbkey"/>
                <column name="version"/>
                <column name="path" output_ref="output_file">
                    <move type="directory" relativize_symlinks="True">
                        <!-- <source>${path}</source>--> <!-- out_file.extra_files_path is used as base by default --> <!-- if no source, eg for type=directory, then refers to base -->
                        <target base="${GALAXY_DATA_MANAGER_DATA_PATH}">bakta_database/${value}/${dbkey}</target>
                    </move>
                    <value_translation>${GALAXY_DATA_MANAGER_DATA_PATH}/${dbkey}/bakta_database/${value}/${path}</value_translation>
                    <value_translation type="function">abspath</value_translation>
                </column>
            </output>
        </data_table>
    </data_manager>
</data_managers>
