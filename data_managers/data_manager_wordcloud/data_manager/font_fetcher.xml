<?xml version="1.0"?>
<tool id="fonts_fetcher" name="Font Data Manager" version="1.0">
    <description>Adds fonts to the l</description>
    <command>
        python "$__tool_directory__/data_manager_fetch_fonts.py" 
        --output "$out_file"
        --font_name "$font_name"
        --font_file "$font_file"
    </command>

    <inputs>
        <param name="font_name" type="text" label="Font Name" help="Enter the display name for the font." />
        <param name="font_file" type="data" format="" label="Upload Fo                                                                                                                                                                    nt File" help="Select a TTF font file to add." />
    </inputs>

    <outputs>
        <data format="data_manager_json" name="out_file" />
    </outputs>

    <tests>
        <test>
            <param name="font_name" value="TestFont" />
            <param name="font_file" value="GermaniaOne-Regular.ttf" />
        </test>
    </tests>
</tool>
