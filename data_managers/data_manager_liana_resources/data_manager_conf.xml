<?xml version="1.0"?>
<data_managers>
    <data_manager tool_file="data_manager/liana_resources_manager.xml" id="liana_resources_downloader">
        <data_table name="liana_resources">
            <output>
                <column name="value"/>
                <column name="name"/>
                <column name="description"/>
                <column name="path" output_ref="output_file">
                    <move type="directory" relativize_symlinks="True">
                        <source>${path}</source>
                        <target base="${GALAXY_DATA_MANAGER_DATA_PATH}">liana-db/${name}</target>
                    </move>
                    <value_translation>${GALAXY_DATA_MANAGER_DATA_PATH}/liana-db/${name}</value_translation>
                    <value_translation type="function">abspath</value_translation>
                </column>
            </output>
        </data_table>
    </data_manager>
</data_managers>
