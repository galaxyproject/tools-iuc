<data_managers>
    <data_manager tool_file="data_manager/data_manager_busco_download.xml" id="data_manager_busco_download" >
        <data_table name="busco_database">  <!-- Defines a Data Table to be modified. -->
            <output> <!-- Handle the output of the Data Manager Tool -->
                <column name="value" />  <!-- columns that are going to be specified by the Data Manager Tool -->
                <column name="name" />  <!-- columns that are going to be specified by the Data Manager Tool -->
                <column name="dbversion" /> <!-- columns that are going to be specified by the Data Manager Tool -->
                <column name="path" output_ref="out_file" >
                    <move type="directory">
                        <source>${path}</source>
                        <target base="${GALAXY_DATA_MANAGER_DATA_PATH}">busco/${value}</target>
                    </move>
                    <value_translation>${GALAXY_DATA_MANAGER_DATA_PATH}/busco/${value}</value_translation>
                </column>
            </output>
        </data_table>
    </data_manager>
</data_managers>

