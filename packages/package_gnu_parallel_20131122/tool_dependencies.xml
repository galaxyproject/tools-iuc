<?xml version="1.0"?>
<tool_dependency>
    <package name="gnu_parallel" version="20131122">
        <install version="1.0">
            <actions>
                <action type="download_by_url">ftp://ftp.gnu.org/gnu/parallel/parallel-20131122.tar.bz2</action>
                <action type="autoconf" />
                <action type="set_environment">
                    <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR/bin</environment_variable>
                </action>
            </actions>
        </install>
        <readme>
            Compiling GNU grep requires a C compiler. https://www.gnu.org/software/parallel/
        </readme>
    </package>
</tool_dependency>
