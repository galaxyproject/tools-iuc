<?xml version="1.0"?>
<tool_dependency>
    <package name="rnacode" version="0.3">
        <install version="1.0">
            <actions>
                <action type="download_by_url">https://github.com/downloads/wash/rnacode/RNAcode-0.3.tar.gz</action>
                <action type="autoconf" />
                <action type="set_environment">
                    <environment_variable name="RNACODE_ROOT_PATH" action="set_to">$INSTALL_DIR</environment_variable>
                    <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR/bin</environment_variable>
                </action>
            </actions>
        </install>
        <readme>
            RNAcode - Analyze the protein coding potential in multiple sequence alignments

            https://wash.github.io/rnacode/
        </readme>
    </package>
</tool_dependency>
