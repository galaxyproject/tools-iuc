<?xml version="1.0"?>
<tool_dependency>
    <package name="cramtools" version="3.0">
        <install version="1.0">
            <actions>
                <action type="download_by_url">https://github.com/enasequence/cramtools/archive/159709282e46337336c81db5f520adab02bc67e0.tar.gz</action>
                <action type="move_file">
                    <source>cramtools-3.0.jar</source>
                    <destination>$INSTALL_DIR/jars</destination>
                </action>

                <action type="set_environment">
                    <environment_variable name="JAVA_JAR_PATH" action="set_to">$INSTALL_DIR/jars</environment_variable>
                </action>
                <!-- todo add to env: alias cramtools='java -jar $CRAMTOOLS_ROOT_DIR/cramtools-3.0.jar' -->
            </actions>
        </install>
        <readme>CRAMTools is a set of Java tools and APIs for efficient compression of sequence read data.
        </readme>
    </package>
</tool_dependency>
