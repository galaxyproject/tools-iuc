<?xml version="1.0"?>
<tool_dependency>
    <package name="datamash" version="1.0.6">
        <install version="1.0">
            <actions>
                <action type="download_by_url">http://ftp.gnu.org/gnu/datamash/datamash-1.0.6.tar.gz</action>
                <action type="shell_command">./configure --prefix=$INSTALL_DIR --disable-dependency-tracking</action>
                <action type="shell_command">make</action>
                <action type="shell_command">make check</action>
                <action type="shell_command">make install</action>
                <action type="set_environment">
                    <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR/bin</environment_variable>
                </action>
            </actions>
        </install>
        <readme>
            Compiling GNU Datamash requires a C compiler.
        </readme>
    </package>
</tool_dependency>
