<?xml version="1.0"?>
<tool_dependency>
    <package name="FastQC" version="0.11.2">
        <install version="1.0">
            <actions>
                <action type="download_by_url">http://www.bioinformatics.babraham.ac.uk/projects/fastqc/fastqc_v0.11.2.zip</action>
                <action type="move_directory_files">
                    <source_directory>.</source_directory>
                    <destination_directory>$INSTALL_DIR</destination_directory>
                </action>
                <action type="chmod">
                    <file mode="755">$INSTALL_DIR/fastqc</file>            
                </action>
                <action type="set_environment">
                    <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR</environment_variable>
                    <environment_variable name="FASTQC_JAR_PATH" action="set_to">$INSTALL_DIR</environment_variable>
                </action>
            </actions>
        </install>
        <readme></readme>
    </package>
</tool_dependency>