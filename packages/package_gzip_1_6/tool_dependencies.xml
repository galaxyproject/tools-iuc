<tool_dependency>
    <package name="gzip" version="1.6">
        <install version="1.0">
            <actions>
                <!-- No Chicken or Egg dilemma. Galaxy uses independent Python libraries for decompression -->
                <action type="download_by_url"
                    sha256sum="97eb83b763d9e5ad35f351fe5517e6b71521d7aac7acf3e3cacdb6b1496d8f7e">http://ftp.gnu.org/gnu/gzip/gzip-1.6.tar.gz</action>
                <action type="autoconf"/>
                <action type="shell_command">make check</action>
                <action type="set_environment">
                    <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR/bin</environment_variable>
                </action>
            </actions>
        </install>
        <readme>Downloads and installs:
 - gunzip
 - gzexe
 - gzip
 - uncompress
 - zcat
 - zcmp
 - zdiff
 - zegrep
 - zfgrep
 - zforce
 - zgrep
 - zless
 - zmore
 - znew
        </readme>
    </package>
</tool_dependency>
