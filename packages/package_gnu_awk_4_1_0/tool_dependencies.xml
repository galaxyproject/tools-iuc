<?xml version="1.0"?>
<tool_dependency>
    <package name="gnu_awk" version="4.1.0">
        <install version="1.0">
            <actions>
                <action type="download_by_url">https://ftp.gnu.org/gnu/gawk/gawk-4.1.0.tar.gz</action>
                <action type="autoconf" />
                <action type="set_environment">
                    <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR/bin</environment_variable>
                </action>
            </actions>
        </install>
        <readme>
            Compiling GNU awk requires a C compiler. https://www.gnu.org/software/gawk/
        </readme>
    </package>
</tool_dependency>
